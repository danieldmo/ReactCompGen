import { post } from 'actions/fetch.js';

export const ACTIONS = {
  FETCH_REQUEST: 'FETCH_{{changeme}}_REQUEST',
  FETCH_SUCCESS: 'FETCH_{{changeme}}_SUCCESS',
  FETCH_ERROR: 'FETCH_{{changeme}}_ERROR',

  CREATE_REQUEST: 'CREATE_{{changeme}}_REQUEST',
  CREATE_SUCCESS: 'CREATE_{{changeme}}_SUCCESS',
  CREATE_ERROR: 'CREATE_{{changeme}}_ERROR',
};

export function fetch{{actionName}}(url) {
  return function thunkWrapper(dispatch) {
    dispatch({ type: ACTIONS.FETCH_REQUEST });
    return new Promise((resolve, reject) => {
      fetch(user.calculate_cashout_available).then((data) => {
        dispatch({ type: ACTIONS.FETCH_SUCCESS, data });
        resolve(data);
      }, (error) => {
        dispatch({ type: ACTIONS.FETCH_ERROR, error});
        reject(error);
      });
    });
  };
}

export function add{{actionName}}(url, data) {
  return function thunkWrapper(dispatch) {
    return new Promise((resolve, reject) => {
      dispatch({ type: ACTIONS.CREATE_REQUEST });
      post(url, { data }).then((created) => {
        dispatch({
          type: ACTIONS.CREATE_SUCCESS,
          created,
        });
        return resolve(data);
      }).catch((errors) => {
        dispatch({ type: ACTIONS.CREATE_ERROR, errors });
        return reject(errors);
      });
    });
  };
}
